#export LSCOLORS=ExFxBxDxCxegedabagacad
#export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

alias ll='ls -alh'

# remove all pyc files in current dir
alias killpyc="find . -name '*.pyc' -delete"

