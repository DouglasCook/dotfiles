export HISTSIZE=5000000
export HISTCONTROL=ignoredups

export PATH=/usr/local/bin:/usr/local/sbin:$PATH
# below required to set path for work laptop
export PYTHONPATH=/Users/douglas/eigen/:$PYTHONPATH
export PYTHONDONTWRITEBYTECODE=1

# homebrew github token
export HOMEBREW_GITHUB_API_TOKEN=7df0e45e8a8e804ff0f7a6f8c5fcf9cd0c110eaa
# git defaults to vi which will use built in vim instead of brew one
export GIT_EDITOR=vim

# dylan's tunnel helper function
function tunnel {
   ssh -f $1 -L $2:localhost:$3 -N
}

# colouring ls
export CLICOLOR=1
alias ll='ls -alh'

# remove all pyc files in current dir
alias killpyc="find . -name '*.pyc' -delete"

export PYLINTRC=/Users/douglas/.pylintrc

test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"

# fix brew installed ctags
alias ctags="`brew --prefix`/bin/ctags"

# get pyenv to work
eval "$(pyenv init -)"

# initialise pyenv-virtualenvwrapper
pyenv virtualenvwrapper
